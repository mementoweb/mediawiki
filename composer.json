{
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"jakub-onderka/php-console-highlighter": "0.3.2",
		"mediawiki/mediawiki-codesniffer": "17.0.0",
		"mediawiki/minus-x": "0.3.1"
	},
	"scripts": {
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
		"lint": "parallel-lint . --exclude vendor --exclude node_modules",
		"phpcs": "phpcs -p -s",
		"test": [
			"composer lint",
			"composer phpcs",
			"minus-x check ."
		]
	}
}
